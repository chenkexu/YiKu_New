<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    tools:context="com.dexfun.yiku.activity.InviteActivity">

    <!--<include layout="@layout/include_toolbar_left_btn" />-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:text="邀请有奖"
        android:textColor="#FF1A1A1A"
        android:textSize="14px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="@drawable/shape" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380px">

            <TextView
                android:id="@+id/yi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="15px"
                android:text="方法一：分享海报，好友扫码接受邀请"
                android:textColor="#FF1A1A1A"
                android:textSize="14px"
                />


            <ImageView
                android:id="@+id/m_left"
                android:layout_width="7px"
                android:layout_height="380px"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16px"
                android:layout_marginRight="26px"
                android:layout_below="@id/yi"
                android:src="@drawable/left" />

            <android.support.v4.view.ViewPager
                android:id="@+id/m_ViewPager"
                android:layout_width="277px"
                android:layout_height="380px"
                android:layout_marginLeft="49px"
                android:layout_below="@id/yi"
                />

            <ImageView
                android:id="@+id/m_right"
                android:layout_width="7px"
                android:layout_height="380px"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="26px"
                android:layout_marginRight="16px"
                android:layout_below="@id/yi"
                android:src="@drawable/right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_ViewPager"
                android:layout_marginLeft="49px"
                android:layout_marginTop="18px"
                android:text="你负责貌美如花"
                android:textColor="#FF1A1A1A"
                android:textSize="14px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_ViewPager"
                android:layout_marginLeft="49px"
                android:layout_marginTop="40px"
                android:text="你负责貌美如花"
                android:textColor="#FF1A1A1A"
                android:textSize="14px" />

            <ImageView
                android:id="@+id/update"
                android:layout_width="17px"
                android:layout_height="17px"
                android:layout_below="@id/m_ViewPager"
                android:layout_marginLeft="298px"
                android:layout_marginTop="24px"
                android:src="@mipmap/update" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/update"
                android:layout_marginLeft="285px"
                android:layout_marginTop="3px"
                android:text="更改文案"
                android:textColor="#FF1A1A1A"
                android:textSize="14px" />

            <TextView
                android:id="@+id/share"
                android:layout_width="279px"
                android:layout_height="36px"
                android:layout_below="@id/m_ViewPager"
                android:layout_marginLeft="49px"
                android:layout_marginTop="81px"
                android:background="#FFF34520"
                android:gravity="center"
                android:text="分享这张海报给好友"
                android:textColor="#FFFFFFFF"
                android:textSize="14px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_below="@+id/share"
                android:layout_marginTop="20px"
                android:background="#FFFAFAFA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_below="@id/share"
                android:layout_marginLeft="16px"
                android:layout_marginTop="41px"
                android:text="方法二：好友填写邀请码接受邀请"
                android:textColor="#FF1A1A1A"
                android:textSize="14px" />

            <View
                android:layout_width="247px"
                android:layout_height="94px"
                android:background="#FFFFFFFF"
                android:layout_below="@id/share"
                android:layout_marginLeft="67px"
                android:layout_marginTop="77px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/share"
                android:layout_marginLeft="82px"
                android:layout_marginTop="93px"
                android:text="我的专属邀请码："
                android:textColor="#FF1A1A1A"
                android:textSize="12px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UBCH3849"
                android:textColor="#FF1A1A1A"
                android:textSize="14px"
                android:layout_below="@id/share"
                android:layout_marginLeft="205px"
                android:layout_marginTop="93px"/>

            <TextView
                android:layout_width="247px"
                android:layout_height="36px"
                android:text="复制邀请码"
                android:textColor="#FFFFFFFF"
                android:background="#FFF34520"
                android:textSize="14px"
                android:gravity="center"
                android:layout_below="@id/share"
                android:layout_marginBottom="77px"
                android:layout_marginTop="135px"
                android:layout_marginLeft="67px"/>


        </RelativeLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@mipmap/yq" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="306px">

            <Button
                android:id="@+id/wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />

            <Button
                android:id="@+id/pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
