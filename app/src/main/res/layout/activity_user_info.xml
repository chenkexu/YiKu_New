<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dexfun.yiku.activity.UserInfoActivity">

    <include layout="@layout/include_toolbar_left_btn" />

    <View
        android:layout_width="375px"
        android:layout_height="1px"
        android:background="#FFEFEFEF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="20px">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_icon"
                    android:layout_width="46px"
                    android:layout_height="46px"
                    android:src="@drawable/icon22" />

                <ImageView
                    android:layout_width="6px"
                    android:layout_height="12px"
                    android:layout_marginLeft="10px"
                    android:src="@mipmap/right" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="头像"
                android:textColor="#FF1A1A1A"
                android:textSize="14px"
                android:textStyle="bold" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FFF5F5F5" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_gravity="center_vertical"
                android:text="昵称"
                android:textColor="#FF1A1A1A"
                android:textSize="14px"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入昵称"
                    android:textColor="#FF676869"
                    android:textSize="14px" />

                <ImageView
                    android:layout_width="6px"
                    android:layout_height="12px"
                    android:layout_marginLeft="10px"
                    android:src="@mipmap/right" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FFF5F5F5" />

        <FrameLayout
            android:id="@+id/btn_set_phone"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_gravity="center_vertical"
                android:text="手机号"
                android:textColor="#FF1A1A1A"
                android:textSize="14px"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="20px"
                    android:gravity="center"
                    android:text="请输入手机号"
                    android:textColor="#FF676869"
                    android:textSize="14px" />

                <ImageView
                    android:layout_width="6px"
                    android:layout_height="12px"
                    android:layout_marginLeft="10px"
                    android:src="@mipmap/right" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FFF5F5F5" />

        <FrameLayout
            android:id="@+id/btn_set_sex"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_gravity="center_vertical"
                android:text="性别"
                android:textColor="#FF1A1A1A"
                android:textSize="14px"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="20px"
                    android:gravity="center"
                    android:text="请设置性别"
                    android:textColor="#FF676869"
                    android:textSize="14px" />

                <ImageView
                    android:layout_width="6px"
                    android:layout_height="12px"
                    android:layout_marginLeft="10px"
                    android:src="@mipmap/right" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#FFF5F5F5" />
    <FrameLayout
        android:id="@+id/btn_set_school"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_set_school"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:text="选择学校"
            android:textColor="#FF1A1A1A"
            android:textSize="14px"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="6px"
            android:layout_height="12px"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="10px"
            android:layout_marginRight="20px"
            android:src="@mipmap/right" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFF5F5F5" />
    <FrameLayout
        android:id="@+id/btn_set_s"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:text="尺码"
            android:textColor="#FF1A1A1A"
            android:textSize="14px"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="6px"
            android:layout_height="12px"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="10px"
            android:layout_marginRight="20px"
            android:src="@mipmap/right" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8F8F8" />
</LinearLayout>
