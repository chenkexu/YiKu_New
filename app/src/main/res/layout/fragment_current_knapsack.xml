<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".fragment.CurrentKnapsackFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="26px"
        android:background="@drawable/btu_yidai_gray"
        android:layout_marginLeft="17px"
        android:layout_marginRight="19px"
        android:layout_marginTop="24px"
        android:layout_marginBottom="27px"
        >
    <ImageView
        android:layout_width="17px"
        android:layout_height="10px"
        android:src="@mipmap/yiwei"
        android:layout_marginTop="8px"
        android:layout_marginLeft="11px"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:text="衣位不够？"
            android:textColor="#FF1A1A1A"
            android:textSize="12px"
            android:layout_marginLeft="35px"
            android:layout_marginTop="5px"/>

        <TextView
            android:layout_width="83px"
            android:layout_height="24px"
            android:text="使用加衣劵"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:background="@drawable/btu_yidai"
            android:gravity="center"
            android:layout_marginLeft="254px"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="@drawable/shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </ListView>

        <LinearLayout
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/toast"
            android:layout_width="180px"
            android:layout_height="17px"
            android:layout_gravity="right"
            android:layout_marginTop="10px"
            android:text="还想继续选衣服？立即购买加衣劵 >"
            android:textColor="#FF1A1A1A"
            android:textSize="10px" />
    </LinearLayout>

    <Button
        android:id="@+id/go"
        android:layout_width="163px"
        android:layout_height="36px"
        android:layout_marginBottom="37px"
        android:background="@drawable/btu_yidai"
        android:text="确认衣袋"
        android:textColor="#FFFFFFFF"
        android:textSize="16px" />

</LinearLayout>