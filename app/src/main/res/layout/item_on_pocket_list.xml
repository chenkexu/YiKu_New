<?xml version="1.0" encoding="utf-8"?>
<com.dexfun.layout.DexFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="94px">

    <LinearLayout
        android:layout_margin="20px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="54px"
            android:layout_height="54px"
            android:layout_marginLeft="20px" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:gravity="center"
                android:text="字母玫瑰印花连帽卫衣"
                android:textColor="#FF1A1A1A"
                android:textSize="12px" />

            <TextView
                android:id="@+id/tv_brand_title"
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Supreme"
                android:textColor="#FF676869"
                android:textSize="12px" />

            <TextView
                android:id="@+id/tv_xl"
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="M"
                android:textColor="#FF676869"
                android:textSize="12px" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="17px"
                android:layout_gravity="bottom|right"
                android:gravity="center"
                android:text="¥580"
                android:textColor="#FFAFAFAF"
                android:textSize="12px" />
        </FrameLayout>
    </LinearLayout>

</com.dexfun.layout.DexFrameLayout>