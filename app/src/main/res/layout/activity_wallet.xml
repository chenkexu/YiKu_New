<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dexfun.yiku.activity.WalletActivity">

    <include layout="@layout/include_toolbar_right_text2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFEFEFEF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11px"
            android:text="账户余额"
            android:textColor="#FF1A1A1A"
            android:textSize="14px" />

        <TextView
            android:id="@+id/tv_mp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="¥00.00"
            android:textColor="#FF1F1F1F"
            android:textSize="48px" />

        <Button
            android:id="@+id/btn_get"
            android:layout_width="match_parent"
            android:layout_height="42px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="14px"
            android:background="#FF1F1F1F"
            android:text="提现"
            android:textColor="#FFFFFFFF"
            android:textSize="18px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22px"
            android:layout_marginLeft="24px"
            android:layout_marginTop="14px"
            android:text="提示:满50元可提现（仅支持微信账户）"
            android:textColor="#FF1F1F1F"
            android:textSize="16px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_marginTop="14px"
            android:background="#FFF4F4F4" />

        <LinearLayout
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22px"
                android:layout_marginBottom="14px"
                android:layout_marginLeft="24px"
                android:layout_marginTop="14px"
                android:text="邀请好友得现金红包"
                android:textColor="#FF1F1F1F"
                android:textSize="16px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="24px"
                android:scaleType="fitEnd"
                android:src="@mipmap/jiantou" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:background="#FFF4F4F4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49px"
        android:layout_gravity="bottom"
        android:background="#FFF8F8F8"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="18px"
            android:layout_height="20px"
            android:layout_marginLeft="20px"
            android:src="@mipmap/yajin" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:text="${status}"
            android:textColor="#FF676869"
            android:textSize="14px" />

        <TextView
            android:id="@+id/btn_go"
            android:layout_width="54px"
            android:layout_height="26px"
            android:layout_marginLeft="34px"
            android:gravity="center"
            android:text="查看"
            android:textColor="#FFFF6D6A"
            android:textSize="12px" />
    </LinearLayout>
</LinearLayout>
