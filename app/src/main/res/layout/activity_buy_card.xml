<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dexfun.yiku.activity.BuyCardActivity">

    <include layout="@layout/include_toolbar_left_btn" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFEFEFEF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFF5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false">


                <android.support.v4.view.ViewPager
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="138px"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="69px"
                    android:layout_marginRight="69px"
                    android:layout_marginTop="10px"
                    android:clipChildren="false"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="70px"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="@color/transparent" />

                <Button
                    android:id="@+id/btn_right"
                    android:layout_width="70px"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/transparent" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF5F5F5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFFFF"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20px"
                        android:layout_marginTop="5px"
                        android:gravity="center"
                        android:text="服务内容"
                        android:textColor="#FF1F1F1F"
                        android:textSize="14px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17px"
                        android:text="Content"
                        android:textColor="#FFCCCCCC"
                        android:textSize="12px" />

                    <TextView
                        android:id="@+id/rc_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="17px"
                        android:layout_marginTop="14px"
                        android:text="季卡可享受衣库90天内提供的无限换衣特权"
                        android:textColor="#FF1F1F1F"
                        android:textSize="12px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17px"
                        android:layout_marginBottom="14px"
                        android:layout_marginTop="7px"
                        android:text="衣库负责服装的往返包邮，专业清洗，消毒，除菌"
                        android:textColor="#FF1F1F1F"
                        android:textSize="12px" />

                </LinearLayout>

                <me.shihao.library.XRadioGroup
                    android:id="@+id/czxz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingLeft="20px">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60px"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20px"
                                        android:layout_gravity="center_vertical"
                                        android:text="月卡"
                                        android:textColor="#FF1A1A1A"
                                        android:textSize="14px" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center_vertical"
                                        android:layout_marginRight="20px"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_yk"
                                            android:layout_width="wrap_content"
                                            android:layout_height="20px"
                                            android:layout_marginRight="6px"
                                            android:text="获取中"
                                            android:textColor="#FF1A1A1A"
                                            android:textSize="14px" />

                                        <RadioButton
                                            android:id="@+id/rd_month_card"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>


                                </FrameLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="#FFF5F5F5" />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60px"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20px"
                                        android:layout_gravity="center_vertical"
                                        android:text="季卡"
                                        android:textColor="#FF1A1A1A"
                                        android:textSize="14px" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center_vertical"
                                        android:layout_marginRight="20px"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_jk"
                                            android:layout_width="wrap_content"
                                            android:layout_height="20px"
                                            android:layout_marginRight="6px"
                                            android:text="获取中"
                                            android:textColor="#FF1A1A1A"
                                            android:textSize="14px" />

                                        <RadioButton
                                            android:id="@+id/rd_season_card"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>


                                </FrameLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="#FFF5F5F5" />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60px"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20px"
                                        android:layout_gravity="center_vertical"
                                        android:text="年卡"
                                        android:textColor="#FF1A1A1A"
                                        android:textSize="14px" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center_vertical"
                                        android:layout_marginRight="20px"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_nk"
                                            android:layout_width="wrap_content"
                                            android:layout_height="20px"
                                            android:layout_marginRight="6px"
                                            android:text="获取中"
                                            android:textColor="#FF1A1A1A"
                                            android:textSize="14px" />

                                        <RadioButton
                                            android:id="@+id/rd_year_card"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>


                                </FrameLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="#FFF5F5F5" />

                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>
                </me.shihao.library.XRadioGroup>

                <LinearLayout
                    android:id="@+id/new_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:background="#FFFFFFFF"
                    android:orientation="vertical"
                    android:padding="20px">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px">

                        <TextView
                            android:id="@+id/id_mun_text"
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:gravity="center"
                            android:text="原价"
                            android:textColor="#FF1A1A1A"
                            android:textSize="14px" />

                        <TextView
                            android:id="@+id/tv_yj"
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="获取中"
                            android:textColor="#FF1A1A1A"
                            android:textSize="14px" />
                    </FrameLayout>

                    <me.shihao.library.XRadioGroup
                        android:id="@+id/mysyfxlj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/iv_lj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/xrlj"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:text="优惠劵"
                                android:textColor="#FF1A1A1A"
                                android:textSize="14px" />

                            <TextView
                                android:id="@+id/tv_lj"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:gravity="right|center"
                                android:text="选择优惠劵 >"
                                android:textColor="@color/red"
                                android:textSize="14px" />
                        </LinearLayout>
                    </me.shihao.library.XRadioGroup>

                    <FrameLayout
                        android:id="@+id/id_yjss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:gravity="center"
                            android:text="押金"
                            android:textColor="#FF1A1A1A"
                            android:textSize="14px" />

                        <TextView
                            android:id="@+id/tv_ya"
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="获取中"
                            android:textColor="#FF1A1A1A"
                            android:textSize="14px" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/id_zjzh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:gravity="center"
                            android:text="资金账户"
                            android:textColor="#FF1A1A1A"
                            android:textSize="14px" />

                        <TextView
                            android:id="@+id/tv_zjzh"
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="获取中"
                            android:textColor="#FFFF6D6A"
                            android:textSize="14px" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:gravity="center"
                            android:text="总价"
                            android:textColor="#FF1A1A1A"
                            android:textSize="14px" />

                        <TextView
                            android:id="@+id/tv_mun"
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="获取中"
                            android:textColor="#FFFF6D6A"
                            android:textSize="14px" />
                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:layout_marginBottom="38px"
                android:background="#FFF5F5F5"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="同意衣库协议"
                    android:textColor="#FF1A1A1A"
                    android:textSize="12px"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#FFF34520"
        android:gravity="center"
        android:text="去支付 ¥600"
        android:textColor="#FFFFFFFF"
        android:textSize="14px" />
</LinearLayout>
