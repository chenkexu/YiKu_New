<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.dexfun.yiku.activity.OrderSuccessfulActivity">

    <include layout="@layout/include_toolbar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="#FFFFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:layout_marginTop="26px"
            android:gravity="center"
            android:text="订单成功"
            android:textColor="#FFF12A23"
            android:textSize="32px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/to_order"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:layout_marginRight="20px"
                android:background="#FF1F1F1F"
                android:gravity="center"
                android:text="查看订单"
                android:textColor="#FFFFFFFF"
                android:textSize="14px" />

            <Button
                android:id="@+id/to_home"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:background="#FF1F1F1F"
                android:gravity="center"
                android:text="返回首页"
                android:textColor="#FFFFFFFF"
                android:textSize="14px" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#FFEEEEEE" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48px">

        <TextView
            android:id="@+id/ordid"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_gravity="left|center"
            android:layout_marginLeft="13px"
            android:text="订单号：291718392733838"
            android:textColor="#FF1F1F1F"
            android:textSize="12px" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_gravity="right|center"
            android:layout_marginRight="13px"
            android:text="2018-09-12-11:41"
            android:textColor="#FF1F1F1F"
            android:textSize="12px" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFEEEEEE" />

    <com.dexfun.yiku.widget.CustomListView
        android:id="@+id/list"
        android:layout_marginTop="16px"
        android:divider="#FFF"
        android:dividerHeight="0px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13px"
        android:layout_marginRight="13px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#FFEEEEEE" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13px"
        android:layout_marginRight="13px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_gravity="left"
            android:layout_marginTop="14px"
            android:text="配送费："
            android:textColor="#FF1F1F1F"
            android:textSize="12px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_gravity="right"
            android:layout_marginTop="14px"
            android:text="会员往返包邮"
            android:textColor="#FF1F1F1F"
            android:textSize="12px" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13px"
        android:layout_marginRight="13px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_gravity="left"
            android:layout_marginTop="14px"
            android:text="订单总计："
            android:textColor="#FF1F1F1F"
            android:textSize="12px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_gravity="right"
            android:layout_marginTop="14px"
            android:text="会员无限换穿"
            android:textColor="#FF1F1F1F"
            android:textSize="12px" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13px"
        android:layout_marginRight="13px"
        android:layout_marginTop="13px"
        android:background="#FFF4F4F4" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13px"
        android:layout_marginRight="13px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_gravity="left"
            android:layout_marginTop="14px"
            android:text="收货地址："
            android:textColor="#FF1F1F1F"
            android:textSize="12px" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_gravity="right"
            android:layout_marginTop="14px"
            android:text="北京留学人员海淀穿也远 515"
            android:textColor="#FF1F1F1F"
            android:textSize="12px" />
    </FrameLayout>

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="13px"
        android:layout_marginTop="13px"
        android:gravity="right"
        android:text="外先生 15987654321"
        android:textColor="#FF1F1F1F"
        android:textSize="12px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="20px"
        android:background="#FFEEEEEE" />

    <ImageView
        android:id="@+id/jump_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/anzhuo" />
</LinearLayout>
