<?xml version="1.0" encoding="utf-8"?>
<com.dexfun.layout.DexFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dexfun.yiku.widget.SwipeMenuLayout
        android:id="@+id/swipe_menu"
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:orientation="horizontal"
        app:ios="false"
        >

        <com.dexfun.layout.DexRelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/xx"
                android:layout_width="20px"
                android:layout_height="match_parent" />

            <CheckBox

                android:layout_toRightOf="@+id/xx"
                android:id="@+id/checkbox"
                android:layout_width="40px"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingRight="20px" />

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="92px"
                android:layout_height="92px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/checkbox" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="20px"
                android:layout_toEndOf="@+id/img_icon"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="116px"
                    android:layout_height="17px"
                    android:text="字母玫瑰印花连帽卫衣"
                    android:textColor="#FF1A1A1A"
                    android:textSize="14px" />

                <TextView
                    android:id="@+id/tv_brand_title"
                    android:layout_width="wrap_content"
                    android:layout_height="17px"
                    android:layout_marginTop="20px"
                    android:text="Supreme"
                    android:textColor="#FF676869"
                    android:textSize="12px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_xl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="M"
                        android:textColor="#FF676869"
                        android:textSize="12px" />

                    <TextView
                        android:id="@+id/tv_st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="20px"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="12px"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20px"
                android:layout_marginRight="20px"
                android:layout_toRightOf="@+id/content"
                android:gravity="right"
                android:text="¥580"
                android:textColor="#FFAFAFAF"
                android:textSize="12px" />
        </com.dexfun.layout.DexRelativeLayout>


        <com.dexfun.layout.DexFrameLayout
            android:id="@+id/vi_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="64px"
                android:layout_height="132px"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="删除"
                android:textColor="#FFFFFFFF"
                android:textSize="14px" />
        </com.dexfun.layout.DexFrameLayout>

    </com.dexfun.yiku.widget.SwipeMenuLayout>

</com.dexfun.layout.DexFrameLayout>