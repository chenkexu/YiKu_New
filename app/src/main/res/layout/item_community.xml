<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="14px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="22px"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:text="Jingle"
            android:textColor="#FF133C66"
            android:textSize="16px" />

        <ImageView
            android:id="@+id/btn_addsub"
            android:layout_width="56px"
            android:layout_height="25px"
            android:layout_marginRight="10px"
            android:src="@mipmap/guanzhu" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="14px"
        android:text="这件衣服很好看，哪里都好看，特别好看～喜欢死了！快来买啊！快来买啊！啊啊！！！…"
        android:textColor="#FF1A1A1A"
        android:textSize="14px" />

    <com.dexfun.yiku.widget.NineGridlayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64px"
        android:layout_marginRight="24px"
        android:layout_marginTop="10px"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_2x"
        android:layout_width="match_parent"
        android:layout_height="286px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="7px">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10px"
        android:background="#FFF4F4F4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/btn_share"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="18px"
                android:layout_height="16px"
                android:layout_marginRight="8px"
                android:scaleType="centerInside"
                android:src="@mipmap/fenxiang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:gravity="center"
                android:text="分享"
                android:textColor="#FF1A1A1A"
                android:textSize="14px" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="16px"
            android:background="#FFCCCCCC" />

        <LinearLayout
            android:id="@+id/btn_like"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_like"
                android:layout_width="20px"
                android:layout_height="20px"
                android:src="@mipmap/weidianzan" />

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:gravity="center"
                android:text="9"
                android:textColor="#FF1A1A1A"
                android:textSize="16px" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="16px"
            android:background="#FFCCCCCC" />

        <LinearLayout
            android:id="@+id/btn_link"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_marginRight="8px"
                android:scaleType="centerInside"
                android:src="@mipmap/shangpin2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:gravity="center"
                android:text="查看商品"
                android:textColor="#FF1A1A1A"
                android:textSize="14px" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#FFF4F4F4" />
</LinearLayout>