<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="范冰冰"
                android:textColor="#FF1A1A1A"
                android:textSize="12px" />

            <TextView
                android:layout_marginRight="20px"
                android:id="@+id/item_receiver_phone"
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical"
                android:text="15801006186"
                android:textColor="#FF1A1A1A"
                android:textSize="12px" />
        </FrameLayout>

        <TextView
            android:id="@+id/item_receiver_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="12px"
            android:gravity="center_vertical"
            android:text="北京北京市海淀区西三旗龙乡小区东3-3-402"
            android:textColor="#FF1A1A1A"
            android:textSize="12px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:background="#FFF5F5F5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="57px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">

        <RadioButton
            android:layout_gravity="center_vertical"
            android:id="@+id/item_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用此地址"
            android:textColor="#FF999999"
            android:textSize="14px"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginRight="20px"
                android:id="@+id/item_compile"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13.8px"
                    android:layout_height="13.8px"
                    android:background="@mipmap/edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17px"
                    android:text="编辑"
                    android:layout_marginLeft="7.7px"
                    android:gravity="center"
                    android:textColor="#FF676869"
                    android:textSize="12px" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_delete"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13.8px"
                    android:layout_height="13.8px"
                    android:background="@mipmap/delete" />

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="7.7px"
                    android:layout_width="wrap_content"
                    android:layout_height="17px"
                    android:text="删除"
                    android:textColor="#FF676869"
                    android:textSize="12px" />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>