<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:gravity="center_vertical"
            android:text="衣袋状态：待签收"
            android:textColor="#FF1A1A1A"
            android:textSize="14px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">


            <LinearLayout
                android:id="@+id/btn_wl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:src="@mipmap/wuliu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17px"
                    android:layout_marginLeft="4px"
                    android:gravity="center"
                    android:text="物流信息"
                    android:textColor="#FFFF6D6A"
                    android:textSize="12px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_sf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_marginLeft="12px"
                    android:src="@mipmap/queren" />

                <TextView
                    android:id="@+id/btn_return"
                    android:layout_width="wrap_content"
                    android:layout_height="17px"
                    android:layout_marginLeft="4px"
                    android:gravity="center"
                    android:text="确认收货"
                    android:textColor="#FFFF6D6A"
                    android:textSize="12px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFF5F5F5" />

    <com.dexfun.yiku.widget.CustomListView
        android:id="@+id/list_po"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="375px"
        android:layout_height="10px"
        android:background="#FFF8F8F8" />
</LinearLayout>