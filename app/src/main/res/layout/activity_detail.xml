<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dexfun.yiku.activity.DetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="53px">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:scaleType="centerInside"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/title_w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FF1A1A1A"
                    android:textSize="18px"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:paddingRight="20px"
                    android:scaleType="centerInside"
                    android:src="@mipmap/fenxiang" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFEEEEEE" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="426px">

                            <com.bigkoo.convenientbanner.ConvenientBanner

                                android:id="@+id/loop_viewpager_arc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:canLoop="true" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/yx2"
                            android:layout_width="38px"
                            android:layout_height="18px"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="7px"
                            android:layout_marginBottom="7px"
                            android:src="@mipmap/zyw"
                            android:visibility="invisible" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF4F4F4">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="41px"
                            android:paddingLeft="20px"
                            android:paddingRight="20px">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="20px"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="来自：CLOT"
                                android:textColor="#FF999999"
                                android:textSize="16px"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="17px"
                                    android:text="参考价"
                                    android:textColor="#999999"
                                    android:textSize="14px" />

                                <TextView
                                    android:id="@+id/tv_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="17px"
                                    android:layout_marginLeft="5px"
                                    android:text="¥1288"
                                    android:textColor="#999999"
                                    android:textSize="14px" />
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingLeft="20px"
                        android:paddingRight="20px">

                        <View
                            android:layout_width="335px"
                            android:layout_height="1px"
                            android:background="#FFF5F5F5" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="22px"
                            android:layout_marginTop="16px"
                            android:gravity="center|left"
                            android:text="买手推荐语"
                            android:textColor="#FF1A1A1A"
                            android:textSize="16px" />

                        <TextView
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8px"
                            android:text="暂无信息"
                            android:textColor="#FF999999"
                            android:textSize="14px" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="16px"
                            android:background="#FFF4F4F4" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16px"
                            android:layout_marginRight="12px"
                            android:text="选择尺码"
                            android:textColor="#FF1A1A1A"
                            android:textSize="16px" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:orientation="horizontal">

                            <android.support.design.widget.TabLayout
                                android:id="@+id/tab_xl2"
                                android:layout_width="match_parent"
                                android:layout_height="26px"
                                android:layout_weight="1"
                                app:tabMode="scrollable" />

                            <TextView
                                android:id="@+id/dfj2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="⚠️待返架"
                                android:textColor="#FFEE2D2D"
                                android:textSize="14px"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="20px"
                            android:background="#FFF4F4F4" />

                        <LinearLayout
                            android:id="@+id/show_mys"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16px">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="22px"
                                    android:text="我的尺码表 (CM)"
                                    android:textColor="#FF1A1A1A"
                                    android:textSize="16px" />

                                <TextView
                                    android:id="@+id/btn_edit_mys"
                                    android:layout_width="wrap_content"
                                    android:layout_height="22px"
                                    android:layout_gravity="right"
                                    android:gravity="center"
                                    android:text="编辑我的尺码 >"
                                    android:textColor="#FFEE2D2D"
                                    android:textSize="14px" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="16px"
                                android:background="@color/colorAccent">

                                <com.kelin.scrollablepanel.library.ScrollablePanel
                                    android:id="@+id/table_my"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1px"
                                    android:layout_marginTop="1px"
                                    android:background="@color/colorAccent" />
                            </FrameLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10px"
                            android:layout_marginTop="20px"
                            android:background="#FFF8F8F8"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/to_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="20px"
                            android:paddingBottom="20px"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_d_ic"
                                android:layout_width="60px"
                                android:layout_height="60px"
                                android:src="@drawable/lollipop" />

                            <TextView
                                android:id="@+id/tv_d_title"
                                android:layout_width="59px"
                                android:layout_height="20px"
                                android:layout_marginLeft="10px"
                                android:gravity="center"
                                android:text="Supreme"
                                android:textColor="#FF1A1A1A"
                                android:textSize="14px" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right|center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="17px"
                                    android:gravity="center"
                                    android:text="查看详情"
                                    android:textColor="#FF1A1A1A"
                                    android:textSize="12px" />

                                <ImageView
                                    android:layout_width="6px"
                                    android:layout_height="12px"
                                    android:layout_marginLeft="6px"
                                    android:src="@mipmap/right" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10px"
                            android:background="#FFF8F8F8"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20px"
                            android:text="商品详情"
                            android:textColor="#FF1A1A1A"
                            android:textSize="14px"
                            android:visibility="gone" />

                        <View
                            android:layout_width="14px"
                            android:layout_height="1px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:background="#FF1A1A1A"
                            android:visibility="gone" />

                        <com.dexfun.yiku.widget.CustomListView
                            android:id="@+id/list_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:divider="#FFFF"
                            android:dividerHeight="20dp"
                            android:visibility="gone">

                        </com.dexfun.yiku.widget.CustomListView>

                        <LinearLayout
                            android:id="@+id/show_scm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="22px"
                                android:layout_marginTop="24px"
                                android:text="商品尺码表 (CM)"
                                android:textColor="#FF1A1A1A"
                                android:textSize="16px" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="16px"
                                android:background="@color/colorAccent">

                                <com.kelin.scrollablepanel.library.ScrollablePanel
                                    android:id="@+id/table"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1px"
                                    android:layout_marginTop="1px"
                                    android:background="@color/colorAccent" />
                            </FrameLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10px"
                                android:layout_marginTop="24px"
                                android:background="#FFF4F4F4" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="24px"
                            android:text="晒图评论"
                            android:textColor="#FF1A1A1A"
                            android:textSize="20px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4px"
                            android:text="BLUEPRINT REVIEW"
                            android:textColor="#FFCCCCCC"
                            android:textSize="10px" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-20px"
                            android:layout_marginRight="-20px">

                            <LinearLayout
                                android:id="@+id/list_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="invisible">

                                <ListView
                                    android:id="@+id/pic_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14px" />

                                <TextView
                                    android:id="@+id/load_pic_all"
                                    android:layout_width="108px"
                                    android:layout_height="25px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="24px"
                                    android:background="#FF1A1A1A"
                                    android:gravity="center"
                                    android:text="查看更多评论 >"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="12px" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/list_view2"
                                android:layout_width="match_parent"
                                android:layout_height="100px"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/pinglun" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14px"
                                    android:text="暂无评论"
                                    android:textColor="#FFCCCCCC"
                                    android:textSize="16px" />
                            </LinearLayout>

                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10px"
                            android:layout_marginTop="24px"
                            android:background="#FFF4F4F4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="28px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="24px"
                            android:text="相关推荐"
                            android:textColor="#FF1A1A1A"
                            android:textSize="20px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="14px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4px"
                            android:text="SELECT RECOMMENDATION"
                            android:textColor="#FFCCCCCC"
                            android:textSize="10px" />

                        <com.dexfun.yiku.widget.CustomGridView
                            android:id="@+id/list_push"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-20px"
                            android:layout_marginTop="24px"
                            android:layout_marginRight="-20px"
                            android:horizontalSpacing="-10dp"
                            android:numColumns="2">

                        </com.dexfun.yiku.widget.CustomGridView>
                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_gravity="bottom"
                android:background="@color/colorLine"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/to_kf"
                    android:layout_width="69px"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_marginTop="8px"
                        android:src="@mipmap/like_un" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14px"
                        android:text="收藏"
                        android:textColor="#FF676869"
                        android:textSize="10px" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="49px"
                    android:background="#FFEFEFEF" />

                <LinearLayout
                    android:id="@+id/to_yd"
                    android:layout_width="69px"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.dexfun.layout.DexRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/ydsl"
                            android:layout_width="10px"
                            android:layout_height="10px"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="top|right"
                            android:layout_marginLeft="-5px"
                            android:layout_marginTop="4px"
                            android:layout_toEndOf="@+id/xxxxss"
                            android:background="@drawable/ydbj"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="7px" />

                        <ImageView
                            android:id="@+id/xxxxss"
                            android:layout_width="20px"
                            android:layout_height="20px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8px"
                            android:src="@mipmap/yidaio" />
                    </com.dexfun.layout.DexRelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14px"
                        android:text="衣袋"
                        android:textColor="#FF676869"
                        android:textSize="10px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_cart"
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:background="#1A1A1A"
                    android:gravity="center"
                    android:text="加入衣袋"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8b646464"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_1"
                        android:layout_width="54px"
                        android:layout_height="72px"
                        android:layout_marginLeft="14px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24px"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_1"
                            android:layout_width="wrap_content"
                            android:layout_height="22px"
                            android:text="刺绣卫衣"
                            android:textColor="#FF1A1A1A"
                            android:textSize="16px" />

                        <TextView
                            android:id="@+id/b_1"
                            android:layout_width="wrap_content"
                            android:layout_height="17px"
                            android:layout_marginTop="4px"
                            android:text="SKETCH"
                            android:textColor="#FF999999"
                            android:textSize="12px" />

                        <TextView
                            android:id="@+id/p_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:text="参考价：1300"
                            android:textColor="#FF1A1A1A"
                            android:textSize="14px" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/c_1"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_marginRight="14px"
                        android:scaleType="center"
                        android:src="@mipmap/gbxx" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="12px"
                    android:background="#FFEEEEEE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14px"
                    android:layout_marginTop="24px"
                    android:text="请选择尺码"
                    android:textColor="#FF1A1A1A"
                    android:textSize="16px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16px"
                    android:layout_marginTop="16px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_xl"
                        android:layout_width="match_parent"
                        android:layout_height="26px"
                        android:layout_weight="1"
                        app:tabMode="scrollable" />

                    <TextView
                        android:id="@+id/dfj"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="16px"
                        android:gravity="center"
                        android:text="⚠️待返架"
                        android:textColor="#FFEE2D2D"
                        android:textSize="14px"
                        android:visibility="gone" />
                </LinearLayout>

                <Button
                    android:id="@+id/t_1"
                    android:layout_width="match_parent"
                    android:layout_height="48px"
                    android:layout_marginTop="60px"
                    android:background="#FF1A1A1A"
                    android:text="加入衣袋"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18px" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
