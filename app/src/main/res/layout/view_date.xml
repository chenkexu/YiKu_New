<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="#FFFFFFFF"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="53px"
            android:background="#FF1A1A1A">

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="24px"
                android:gravity="center"
                android:layout_marginRight="24px"
                android:text="取消"
                android:textColor="#FF999999"
                android:textSize="14px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22px"
                android:layout_gravity="center|center_vertical"
                android:text="请选择预约时间"
                android:textColor="#FFFFFFFF"
                android:textSize="16px" />

            <TextView
                android:id="@+id/btn_go"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:paddingRight="24dp"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffff"
                android:textSize="14px" />
        </FrameLayout>

        <RadioGroup
            android:id="@+id/group_1"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/date_jt"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:background="@drawable/rdbt"
                android:button="@null"
                android:gravity="center"
                android:text="今天"
                android:textColor="#FF1A1A1A"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/date_mt"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:background="@drawable/rdbt"
                android:button="@null"
                android:gravity="center"
                android:text="明天"
                android:textColor="#FF1A1A1A"
                android:textSize="14sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/group_2"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="24px"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/date_10_12"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24px"
                android:background="@drawable/rdbt"
                android:button="@null"
                android:gravity="center"
                android:text="10:00-12:00"
                android:textColor="#FF1A1A1A"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/date_12_14"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/rdbt"
                android:button="@null"
                android:gravity="center"
                android:text="12:00-14:00"
                android:textColor="#FF1A1A1A"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/date_14_16"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/rdbt"
                android:button="@null"
                android:gravity="center"
                android:text="14:00-16:00"
                android:textColor="#FF1A1A1A"
                android:textSize="14sp" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>